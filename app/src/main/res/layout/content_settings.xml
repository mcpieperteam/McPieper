<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundGravity="center_vertical|clip_vertical"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    tools:context="com.mcpieperteam.mcpieper.Main2Activity">

    <LinearLayout
        android:id="@+id/bg_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="center_vertical|center_horizontal"
        android:gravity="center|top"
        android:orientation="vertical">

        <Switch
            android:id="@+id/no_firebase_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:padding="2dp"
            android:text="Hintergrundserviece"
            android:textColor="@color/red" />

        <Switch
            android:id="@+id/save_enerdie_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="2dp"
            android:text="Energiesparmodus"
            android:textColor="@color/red"
            android:visibility="invisible" />

        <Button
            android:id="@+id/changepw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/common_google_signin_btn_text_light_normal_background"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:text="Passwort Ã¤ndern"
            android:textAllCaps="false"
            android:textColor="@color/red" />
        <Button
            android:id="@+id/request_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/common_google_signin_btn_text_light_normal_background"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:text="Abmelden"
            android:textAllCaps="false"
            android:textColor="@color/red" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>