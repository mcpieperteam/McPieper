<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="218dp"
            android:layout_margin="100dp"
            app:srcCompat="@drawable/mcpieper_icon" />

        <EditText
            android:id="@+id/inp_old_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:hint="Altes Passwort"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/inp_new_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:hint="Neues Passwort"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/inp_new_pwd_rep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:hint="Neues Passwort Wiederholen"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/submit_pw_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/common_google_signin_btn_text_light_normal_background"
            android:padding="20dp"
            android:text="Passwort Ã¤ndern" />
    </LinearLayout>
</FrameLayout>